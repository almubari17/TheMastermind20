<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FF104E8B">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.3"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Select a Mastercode"
            android:id="@+id/textView3"
            android:textSize="68sp"
            android:textColor="#ff000000" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.4"
        android:gravity="center"
        android:weightSum="1">

        <ImageButton
            android:layout_width="200dp"
            android:layout_height="150dp"
            android:id="@+id/empty_master1"
            android:clickable="false"
            android:src="@mipmap/empty_circle"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"
            android:background="#FF104E8B"
            android:visibility="visible" />

        <ImageButton
            android:layout_width="200dp"
            android:layout_height="150dp"
            android:id="@+id/empty_master2"
            android:clickable="false"
            android:src="@mipmap/empty_circle"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"
            android:background="#FF104E8B"
            android:visibility="visible" />

        <ImageButton
            android:layout_width="200dp"
            android:layout_height="150dp"
            android:id="@+id/empty_master3"
            android:clickable="false"
            android:src="@mipmap/empty_circle"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"
            android:background="#FF104E8B"
            android:visibility="visible" />

        <ImageButton
            android:layout_width="200dp"
            android:layout_height="150dp"
            android:id="@+id/empty_master4"
            android:clickable="false"
            android:src="@mipmap/empty_circle"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"
            android:background="#FF104E8B"
            android:visibility="visible" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.3"
        android:gravity="center">

        <ImageButton
            android:layout_width="200dp"
            android:layout_height="150dp"
            android:id="@+id/blackButton"
            android:clickable="false"
            android:src="@mipmap/black1"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"
            android:background="#FF104E8B"
            android:visibility="visible" />

        <ImageButton
            android:layout_width="200dp"
            android:layout_height="150dp"
            android:id="@+id/blueButton"
            android:background="#FF104E8B"
            android:src="@mipmap/blue_circle"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"
            android:backgroundTintMode="src_over" />

        <ImageButton
            android:layout_width="200dp"
            android:layout_height="150dp"
            android:id="@+id/brownButton"
            android:background="#FF104E8B"
            android:src="@mipmap/brown_circle"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"
            android:focusableInTouchMode="false" />

        <ImageButton
            android:layout_width="200dp"
            android:layout_height="150dp"
            android:id="@+id/greenButton"
            android:background="#FF104E8B"
            android:src="@mipmap/green_circle"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.3"
        android:gravity="center">

        <ImageButton
            android:layout_width="200dp"
            android:layout_height="150dp"
            android:id="@+id/orangeButton"
            android:background="#FF104E8B"
            android:src="@mipmap/orange_circle"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true" />

        <ImageButton
            android:layout_width="200dp"
            android:layout_height="150dp"
            android:id="@+id/purpleButton"
            android:background="#FF104E8B"
            android:src="@mipmap/purple_circle"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true" />

        <ImageButton
            android:layout_width="200dp"
            android:layout_height="150dp"
            android:id="@+id/redButton"
            android:background="#FF104E8B"
            android:src="@mipmap/reball"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true" />

        <ImageButton
            android:layout_width="200dp"
            android:layout_height="150dp"
            android:id="@+id/yellowButton"
            android:background="#FF104E8B"
            android:src="@mipmap/yellow_circle"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.3"
        android:gravity="center">

        <Button
            android:layout_width="300dp"
            android:layout_height="150dp"
            android:text="Submit Mastercode"
            android:id="@+id/master_button"
            android:textSize="45sp" />
    </LinearLayout>

</LinearLayout>